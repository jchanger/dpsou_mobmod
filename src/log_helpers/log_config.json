{
	"version": 1,
	"disable_existing_loggers": false,
	"formatters": {
		"simple": {
			"class": "logging.Formatter",
			"format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
		}
	},
	"handlers": {
		"console": {
			"class": "logging.StreamHandler",
			"level": "DEBUG",
			"formatter": "simple",
			"stream": "ext://sys.stdout"
		},
		"debug_file_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "simple",
			"filename": "/home/jesus/Develop/uav_ns/auav/src/log_helpers/debug.log",
            "maxBytes": 10485760,
            "backupCount": 20,
            "encoding": "utf8"
        }
	},
	"loggers": {
		"simpleLogger": {
			"level": "DEBUG",
			"handlers": ["console", "debug_file_handler"],
			"propagate": "yes"
		}
	},
	"root": {
		"handlers": ["console", "debug_file_handler"],
		"level": "DEBUG"
	}
}
